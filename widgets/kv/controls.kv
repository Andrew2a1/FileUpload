#:kivy 1.0

<Controls>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            Label:
                size_hint: 0.2, 1
                text: "Speed"

            Slider:
                id: speed_slider
                max: 100
                value: 0

            Label:
                size_hint: 0.1, 1
                text: str(int(speed_slider.value)) + "%"

        BoxLayout:
            orientation: "horizontal"

            Button:
                id: reset
                text: "Reset"

            ToggleButton:
                id: auto
                text: "Auto"

            Button:
                id: add
                text: "Add client"