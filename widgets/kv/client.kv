#:kivy 1.0

<ClientRect@Widget>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

<Client>:
    size_hint_x: None

    ClientRect:
        pos_hint: {"x": 0.3, "top": 0.9}
        size_hint: 0.4, 0.4

    Label:
        text: "id: #1\nt: 5s\ns: 0.5GB"
        pos_hint: {"x": 0, "top": 0.5}
        size_hint: 1, 0.4