#:kivy 1.0

<Separator@Widget>:
    size_hint_y: None
    height: dp(12)

    canvas:
        Color:
            rgb: 0.3, 0.3, 0.3
        Rectangle:
            pos: self.x, self.center_y
            size: self.width, dp(2)

<History>:
    layout: layout

    ScrollView:
        pos_hint: {"x": 0, "top": 1}
        size_hint: 1, None
        size: root.width, root.height

        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            id: layout
            cols: 1
            size_hint_y: None
            row_default_height: root.height * 0.12
            height: self.minimum_height

            GridLayout:
                cols: 3

                Label:
                    text: "Client id"

                Label:
                    text: "Files"

                Label:
                    text: "Wait time"

                Separator:
                Separator:
                Separator:


